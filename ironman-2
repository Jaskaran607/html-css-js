    <script>
        // Default active section
        document.addEventListener('DOMContentLoaded', function() {
            showSection('about');
            init3DScene();
        });
        
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.info-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
        }
        
        function init3DScene() {
            // Create hologram effect
            const hologramGeometry = new THREE.PlaneGeometry(3, 4);
            const hologramMaterial = new THREE.MeshBasicMaterial({
                color: 0x00aaff,
                transparent: true,
                opacity: 0.2,
                side: THREE.DoubleSide
            });
            const hologram = new THREE.Mesh(hologramGeometry, hologramMaterial);
            hologram.position.set(0, 0, -5);
            scene.add(hologram);
            // Set up Three.js scene
            const container = document.getElementById('canvas-container');
            const scene = new THREE.Scene();
            const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            const renderer = new THREE.WebGLRenderer({ alpha: true });
            
            renderer.setSize(window.innerWidth, window.innerHeight);
            container.appendChild(renderer.domElement);
            
            // Add a subtle particle effect (stars)
            const particles = new THREE.BufferGeometry;
            const particleCount = 1000;
            
            const positions = new Float32Array(particleCount * 3);
            const sizes = new Float32Array(particleCount);
            
            for(let i = 0; i < particleCount; i++) {
                positions[i * 3] = (Math.random() - 0.5) * 2000;
                positions[i * 3 + 1] = (Math.random() - 0.5) * 2000;
                positions[i * 3 + 2] = (Math.random() - 0.5) * 2000;
                
                sizes[i] = Math.random() * 2;
            }
            
            particles.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            particles.setAttribute('size', new THREE.BufferAttribute(sizes, 1));
            
            const particleMaterial = new THREE.PointsMaterial({
                color: 0xffffff,
                size: 1,
                transparent: true,
                opacity: 0.8
            });
            
            const particleSystem = new THREE.Points(particles, particleMaterial);
            scene.add(particleSystem);
            
            // Add ambient light
            const ambientLight = new THREE.AmbientLight(0x404040);
            scene.add(ambientLight);
            
            // Add directional light (like arc reactor glow)
            const directionalLight = new THREE.DirectionalLight(0x00aaff, 0.4);
            directionalLight.position.set(0, 1, 0);
            scene.add(directionalLight);
            
            // Add spot light (repulsor glow effect)
            const spotLight = new THREE.SpotLight(0xff4d4d, 0.7);
            spotLight.position.set(0, 0, 100);
            spotLight.castShadow = true;
            scene.add(spotLight);
            
            // Camera position and controls
            camera.position.z = 30;
            const controls = new THREE.OrbitControls(camera, renderer.domElement);
            controls.enableZoom = false;
            controls.autoRotate = true;
            controls.autoRotateSpeed = 0.5;
            
            // Animation loop
            function animate() {
                requestAnimationFrame(animate);
                
                // Rotate particles
                particleSystem.rotation.x += 0.0001;
                particleSystem.rotation.y += 0.0001;
                
                controls.update();
                renderer.render(scene, camera);
            }
            
            animate();
            
            // Handle window resize
            window.addEventListener('resize', function() {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
            
            // Simulate arc reactor effect
            let intensityDirection = 1;
            setInterval(() => {
                if (directionalLight.intensity > 0.6) intensityDirection = -1;
                if (directionalLight.intensity < 0.4) intensityDirection = 1;
                directionalLight.intensity += 0.01 * intensityDirection;
            }, 100);
            
            // Add interactive hover effects for sections
            const sections = document.querySelectorAll('.info-section');
            
            sections.forEach(section => {
                section.addEventListener('mouseenter', () => {
                    spotLight.position.set(
                        Math.random() * 100 - 50,
                        Math.random() * 100 - 50,
                        Math.random() * 100 + 20
                    );
                });
            });
        }
    </script>
